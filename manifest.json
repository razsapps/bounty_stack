{
  "manifest_version": 2,

  "name": "Bounty Stack",
  "description": "This extension alerts you to new bounties on StackOverflow.",
  "version": "0.1",
  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "https://api.stackexchange.com/"
  ]
}